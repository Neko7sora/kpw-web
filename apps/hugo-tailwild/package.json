{
  "name": "website-root-tailwild",
  "description": "KamePowerWorld Website",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "dev": "run-p dev:*",
    "dev:hugo": "hugo server --bind=localhost --disableFastRender --baseURL=http://localhost",
    "dev:css": "npx tailwindcss -i ./assets/css/main.css -o ./assets/css/style.css -w",
    "check": "pnpm run check:scripts && pnpm run check:styles && pnpm run check:markdown",
    "check:scripts": "eslint config",
    "check:styles": "stylelint \"assets/scss/**/*.{css,sass,scss}\"",
    "check:markdown": "markdownlint-cli2 \"**/*.md\"",
    "fix": "pnpm run fix:styles && pnpm run fix:markdown",
    "fix:styles": "stylelint --fix \"assets/scss/**/*.{css,sass,scss,sss,less}\"",
    "fix:markdown": "markdownlint-cli2-fix \"*.md\" \"content/**/*.md\"",
    "test": "pnpm run check",
    "build": "pnpm run build:css && pnpm run build:hugo",
    "build:hugo": "hugo --gc --trace=./../../public/root",
    "build:css": "npx tailwindcss -i ./assets/css/main.css -o ./assets/css/style.css -m",
    "clean": "pnpm run clean:build && pnpm run clean:install",
    "clean:build": "shx rm -rf public resources .hugo_build.lock",
    "clean:install": "shx rm -rf node_modules"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "@tailwindcss/typography": "^0.5.9",
    "tailwindcss": "^3.2.4",
    "quicklink": "^2.3.0",
    "shx": "^0.3.4"
  }
}
