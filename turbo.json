{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "outputs": ["public/**"],
      "inputs": [
        "apps/hugo/**",
        "apps/hugo-tailwild/**",
        "apps/mkdocs/**",
        "packages/app-hugo/**",
        "packages/app-mkdocs*/**"
      ]
    },
    "build:minify": {
      "cache": true,
      "dependsOn": ["^build:minify"],
      "outputs": ["public/**"],
      "inputs": ["packages/html-minifier/**", "public/**"]
    },
    "check": {},
    "clean:build": {
      "inputs": ["packages/**", "apps/**"]
    },
    "clean:install": {
      "inputs": ["packages/**", "apps/**"]
    },
    "dev": {
      "inputs": ["packages/**", "apps/**"]
    },
    "fix": {
      "dependsOn": ["check"]
    },
    "install:next": {
      "cache": true
    }
  }
}
